{
    "kind": "singleType",
    "collectionName": "homepages",
    "info": {
        "singularName": "homepage",
        "pluralName": "homepages",
        "displayName": "Homepage",
        "description": "Homepage content and configuration"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "heroTitle": {
            "type": "string",
            "required": true
        },
        "heroSubtitle": {
            "type": "string"
        },
        "heroBadge": {
            "type": "string"
        },
        "heroImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "featuredProduct": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::product.product"
        },
        "featuredProductTitle": {
            "type": "string"
        },
        "featuredProductDescription": {
            "type": "text"
        },
        "categoriesTitle": {
            "type": "string"
        },
        "categoriesSubtitle": {
            "type": "text"
        },
        "featuresTitle": {
            "type": "string"
        },
        "featuresSubtitle": {
            "type": "text"
        },
        "orderStepsTitle": {
            "type": "string"
        },
        "orderStepsSubtitle": {
            "type": "text"
        },
        "orderStepsNote": {
            "type": "text"
        },
        "emotionalTrustTitle": {
            "type": "string"
        },
        "emotionalTrustDescription": {
            "type": "text"
        },
        "emotionalTrustQuote": {
            "type": "string"
        },
        "emotionalTrustImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "blogTitle": {
            "type": "string"
        },
        "blogSubtitle": {
            "type": "text"
        },
        "statsTitle": {
            "type": "string"
        },
        "statsSubtitle": {
            "type": "text"
        },
        "whatsappNumber": {
            "type": "string"
        },
        "imoNumber": {
            "type": "string"
        },
        "features": {
            "type": "component",
            "repeatable": true,
            "component": "homepage.feature"
        },
        "stats": {
            "type": "component",
            "repeatable": true,
            "component": "homepage.stat"
        },
        "orderSteps": {
            "type": "component",
            "repeatable": true,
            "component": "homepage.order-step"
        },
        "whyChooseUs": {
            "type": "component",
            "repeatable": true,
            "component": "homepage.why-choose-us"
        }
    }
}