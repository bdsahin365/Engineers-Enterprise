{
    "kind": "singleType",
    "collectionName": "homepages",
    "info": {
        "singularName": "homepage",
        "pluralName": "homepages",
        "displayName": "Homepage",
        "description": "Homepage content and configuration"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "heroTitle": {
            "type": "string",
            "required": true
        },
        "heroSubtitle": {
            "type": "string"
        },
        "heroImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "featuredProduct": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::product.product"
        },
        "whatsappNumber": {
            "type": "string"
        },
        "imoNumber": {
            "type": "string"
        },
        "features": {
            "type": "component",
            "repeatable": true,
            "component": "homepage.feature"
        },
        "stats": {
            "type": "component",
            "repeatable": true,
            "component": "homepage.stat"
        },
        "orderSteps": {
            "type": "component",
            "repeatable": true,
            "component": "homepage.order-step"
        },
        "whyChooseUs": {
            "type": "component",
            "repeatable": true,
            "component": "homepage.why-choose-us"
        }
    }
}